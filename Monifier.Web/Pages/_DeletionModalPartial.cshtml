@model TagHelpers.DeletionModalTagHelper

<div class="modal fade" id="@Model.ModalId" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Caption</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Model.Text
            </div>
            <div class="modal-footer">
                @if (!string.IsNullOrEmpty(Model.ButtonSoftText))
                {
                    <input type="submit" asp-page-handler="@Model.PageHandler" asp-route-permanent="false"
                           value="@Model.ButtonSoftText" class="btn btn-primary cursor-pointer"/>
                    <input type="submit" asp-page-handler="@Model.PageHandler" asp-route-permanent="true"
                           value="@Model.ButtonToughtText" class="btn btn-danger cursor-pointer"/>
                }
                else
                {
                    <input type="submit" asp-page-handler="@Model.PageHandler"
                           value="@Model.ButtonToughtText" class="btn btn-danger cursor-pointer"/>
                }
            </div>
        </div>
    </div>
</div>