<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monifier.Web</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css"/>
        <link rel="stylesheet" href="~/css/jquery.datetimepicker.min.css"/>
        <link rel="stylesheet" href="~/css/awesomplete.css" />
        <link rel="stylesheet" href="~/css/main.css"/>
        <link rel="stylesheet" href="~/css/validation.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/jquery.datetimepicker.min.css" />
        <link rel="stylesheet" href="~/css/awesomplete.css" />
        <link rel="stylesheet" href="~/css/main.css" />
        <link rel="stylesheet" href="~/css/validation.css" />
    </environment>
    
    @RenderSection("Styles", required: false)
</head>
<body>

<div class="container body-content">
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <a asp-page="/Index" class="navbar-brand">
                <i class="fa fa-shekel"></i>
            </a>
            <button class="navbar-toggler cursor-pointer" type="button" data-toggle="collapse" data-target="#navbarText"
                    aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a id="accountsLink" asp-page="/Accounts/AccountsList" class="nav-link">Счета</a>
                    </li>
                    <li class="nav-item">
                        <a id="flowsLink" asp-page="/Expenses/ExpenseFlows" asp-route-pageNumber="1" class="nav-link">Статьи расходов</a>
                    </li>
                    <li class="nav-item">
                        <a id="expensesLink" asp-page="/Expenses/ExpensesTable" class="nav-link">Расходы</a>
                    </li>
                    <li class="nav-item">
                        <a id="incomesLink" asp-page="/Incomes/IncomesByMonth" class="nav-link">Доходы</a>
                    </li>
                    <li class="nav-item">
                        <a id="productsLink" asp-page="/Products/Categories" asp-route-pageNumber="1" class="nav-link">Товары</a>
                    </li>
                </ul>
            </div>
            <div class="navbar-text" style="text-align: right;">
                <a asp-page="/Auth/Logout" class="nav-link logout-link">
                    <i class="fa fa-power-off"></i>&nbsp;Выход
                </a>
            </div>
        </nav>
    }
    @RenderBody()
    <footer>
        <hr/>
        <p>&copy; crusader, @DateTime.Now.Year - Приложение учета личных финансов</p>
    </footer>
</div>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper-utils.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/awesomplete.js"></script>
    <script src="~/js/jquery.datetimepicker.full.js"></script>
    <script src="~/js/helpers.js"></script>
    <script src="~/js/checkboxed-table.js"></script>
    <script src="~/js/inventorization.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper-utils.min.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/awesomplete.js"></script>
    <script src="~/js/jquery.datetimepicker.full.js"></script>
    <script src="~/js/helpers.js"></script>
    <script src="~/js/checkboxed-table.js"></script>
    <script src="~/js/inventorization.js"></script>
</environment>

@RenderSection("Scripts", required: false)
</body>
</html>
